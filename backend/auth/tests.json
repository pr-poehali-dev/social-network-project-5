{
  "tests": [
    {
      "name": "Register new user",
      "method": "POST",
      "path": "/?action=register",
      "body": {"action": "register", "username": "testuser99", "email": "test99@example.com", "password": "secret123", "display_name": "Тест Юзер"},
      "expectedStatus": 200,
      "expectedBody": {"session_id": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "Login user",
      "method": "POST",
      "path": "/?action=login",
      "body": {"action": "login", "login": "testuser99", "password": "secret123"},
      "expectedStatus": 200,
      "expectedBody": {"session_id": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "Login wrong password",
      "method": "POST",
      "path": "/?action=login",
      "body": {"action": "login", "login": "testuser99", "password": "wrongpass"},
      "expectedStatus": 401,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    }
  ]
}
